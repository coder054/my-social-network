<div class="col-md-6 col-md-offset-3">

  <div class="starter-template">
    <h2>{{ foundUser.name }}</h2>
    <img class="photo-size" src="{{ foundUser.photo }}" />
    <br />
    <br />


    
    {{#if pageOfHimself }} 
    {{else}}
    <input type="hidden" id="user_id" value="{{foundUser._id}}"> 
      {{#if inFollowerList}}
      <p>
      <button class="btn btn-primary" id="unfollow">Following</button>
      </p>
      {{else}}
      <p>
      
      <button class="btn btn-default" id="follow">Follow</button>
      </p>
      {{/if}}
    {{/if}}
  </div>

  

  <ul class="nav nav-tabs">
    <li class="active">
      <a data-toggle="tab" href="#home">Tweets</a>
    </li>
    <li>
      <a data-toggle="tab" href="#menu1">Following</a>
    </li>
    <li>
      <a data-toggle="tab" href="#menu2">Followers</a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      {{> tweets}}
    </div>
    <div id="menu1" class="tab-pane fade">
      {{#each foundUser.following }}
      <div class="media">
        <div class="media-left">
          <a href="/user/{{_id}}">
            <img class="media-object" src="{{ photo }}" />
          </a>
        </div>
        <div class="media-body">
          <a href="/user/{{_id}}">
            <h4 class="media-heading">{{ name }}</h4>
          </a>
        </div>
      </div>
      {{/each}}

    </div>
    <div id="menu2" class="tab-pane fade">
      {{#each foundUser.followers }}
      <div class="media">
        <div class="media-left">
          <a href="/user/{{_id}}">
            <img class="media-object" src="{{ photo }}" />
          </a>
        </div>
        <div class="media-body">
          <a href="/user/{{_id}}">
            <h4 class="media-heading">{{ name }}</h4>
          </a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

{{> helpers}}